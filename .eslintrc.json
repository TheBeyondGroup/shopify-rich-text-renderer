{
  "parser": "babel-eslint",
  "extends": ["plugin:react/recommended", "prettier", "prettier/react"],
  "plugins": ["react", "prettier"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "es2021": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-param-reassign": "off",
    "no-prototype-builtins": "off",
    "consistent-return": "off",
    "func-names": "off",
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "lf",
        "printWidth": 120
      }
    ]
  }
}
